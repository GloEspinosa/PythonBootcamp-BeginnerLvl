# VERSION 1 - A LO COMPLICADO
x = 'X'
first_digit = position[0]
second_digit = position[1]

if first_digit == '1':
    if second_digit == '1':
        row1[0] = x
    elif second_digit == '2':
        row2[0] = x
    elif second_digit == '3':
        row3[0] = x
elif first_digit == '2':
    if second_digit == '1':
        row1[1] = x
    elif second_digit == '2':
        row2[1] = x
    elif second_digit == '3':
        row3[1] = x
elif first_digit == '3':
    if second_digit == '1':
        row1[2] = x
    elif second_digit == '2':
        row2[2] = x
    elif second_digit == '3':
        row3[2] = x
else:
    print("Please the input must be a two-digit number. First digit is column placement, and second digit is row placement.")

