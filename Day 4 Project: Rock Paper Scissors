    print(tie)
  elif computer_choice == choice[1]:
    print(lose)
  elif computer_choice == choice[2]:
    print(win)
elif player_choice == "p" or player_choice == "paper":
  print(paper)
  if computer_choice == choice[0]:
    print(win)
  elif computer_choice == choice[1]:
    print(tie)
  elif computer_choice == choice[2]:
    print(lose)
elif player_choice == "s" or player_choice == "scissors":
  print(scissors)
  if computer_choice == choice [0]:
    print(lose)
  elif computer_choice == choice[1]:
    print(win)
  elif computer_choice == choice[2]:
    print(tie)
else:
  print("Invalid input. ")
